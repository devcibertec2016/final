@model IEnumerable<Datos.tTR_Categoria>

@{
    ViewBag.Title = "Categorias";
}

<h2>Categorias</h2>

<p>
    @Html.ActionLink("Crear Categoria", "Create")
</p>
<table class="table">
    <tr>
        <th>
           Categoria
        </th>
        <th>
            Estado
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
           @item.vNombreCategoria
        </td>
        <td>
            @if (item.iEstado == 1)
            {
                <label>Activo</label>
            }
            else
            {
                <label>Inactivo</label>
            }


        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.iIdCategoria }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.iIdCategoria }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.iIdCategoria })
        </td>
    </tr>
}

</table>
