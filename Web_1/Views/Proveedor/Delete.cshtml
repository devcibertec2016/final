@model Datos.tTR_Proveedor

@{
    ViewBag.Title = "Delete";
}

<h2>Eliminar Proveedor</h2>

<h5>Si elimina el registro, ya no podrá recuperarlo</h5>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
           Proveedor
        </dt>

        <dd>
            @Html.DisplayFor(model => model.vNombreProveedor)
        </dd>

        <dt>
           RUC:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.vRuc)
        </dd>

        <dt>
           Dirección
        </dt>

        <dd>
            @Html.DisplayFor(model => model.vDireccion)
        </dd>

        <dt>
           Telefono 1 : 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.vTelefono1)
        </dd>

        <dt>
          Telefono 2 : 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.vTelefono2)
        </dd>

        <dt>
           Estado :
        </dt>

        <dd>
            @if (@Model.iEstado == 1)
            {
                <label>Activo</label>
            }
            else
            {
                <label>Inactivo</label>
            }
        </dd>

    </dl>
    @if (Model.iEstadoEliminar == 0)
    {
        <label>Usted no puede eliminar el registro ya que se encuentra asociado con un(os) producto(s)</label>
    }

    @using (Html.BeginForm(null, null, null, FormMethod.Post, new { id = "EliminarProveedor" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @if (Model.iEstadoEliminar == 0)
            {
                <input id="" type="button" value="Eliminar" class="btn btn-default" disabled>
            }
            else
            {
                <input id="btnEliminar" type="button" value="Eliminar" class="btn btn-default">
            }
            @Html.ActionLink("Regresar", "Index")
        </div>
    }
</div>
@Scripts.Render("~/bundles/jquery")


@Scripts.Render("~/scrp/proveedor")